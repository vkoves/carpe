<div class="friend-listing <%= @profile ? "profile" : "" %>">
	<a href="/u/<%= user.id %>">
		
		<div class="avatar">
			<% if @home %>
				<img src="<%= user.user_avatar(60) %>" style="width:60px">
			<% else %>
				<img src="<%= user.user_avatar(100) %>">
			<% end %>
		</div>
	</a>
	<div class="friend-details">
		<span class="friend-name"><%= user.name %></span><br>
		<% if @profile%>
			<%= user.friends_count %> Friends <br>
			Friends since: <%= friendship.created_at.strftime("%b. %d, %Y")%> <br>
			<%= link_to friendships_path(:id => friendship.id), :method => :delete, :class => "default red",
			:style => "position: relative; top: 5px;" do %>
				<span>Remove</span>
			<% end %>
		<% elsif current_user and current_user != user %>
			<% if !@home %>
				<% mut = current_user.mutual_friends(user).count %>
				<span id="mutual-friends"><%= mut %> mutual friends</span>
				<br>
				<% status = current_user.friend_status(user) %>
				<% if status == nil #not friends %>
					<%= link_to friendships_path(:friend_id => user), :method => :post, :class => "default green" do %>
						<span>Add Friend</span>
					<% end %>
				<% elsif status == "friend" %>
					<span class="friend-label">Friend</span>
				<% elsif status == "pending" || status == "denied" %>
					<span class="friend-label">Pending...</span>
				<% end %>
			<% else %>
				 
				<% @events = user.events.where(:date => DateTime.now.beginning_of_day...DateTime.now.end_of_day)%>
				<% @events.each do |e| %>
					<% if e.date < DateTime.now and e.end_date > DateTime.now %>
						Busy with <a class="simple" href="/u/<%= user.id %>?p=schedule"><%= e.name %></a>
						<% free = false %>
					<% end %>
				<% end %>
				<%= free ? "Currently free" : "" %>
			<% end %>
		<% end %>
	</div>
</div>