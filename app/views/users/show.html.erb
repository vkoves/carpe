<% content_for :title do %> - <%= @user.name %>'s Profile <% end %>
<%= stylesheet_link_tag "profile" %>
<% if params[:p] == "schedule" %>
	<%= stylesheet_link_tag "schedule" %>
<% end %>

<div id="profile-header">

	<% if @user.has_avatar %>
		<div id="header-image-blur" style="background-image:url(<%= @user.user_avatar(200)%>);"></div>
	<% else %>
		<div id="header-image"></div>
	<% end %>

	<div class="page-container">
		<div class="profile-avatar avatar">
			<img src=<%= @user.user_avatar(200)%>>
		</div>
		<div id="profile-text">
			<h1 id="profile-name" class="zero-top zero-bot"><a href="?"><%= @user.name %></a></h1>
			<div id="profile-follow">
				<% if current_user and !@profile %>
					<%= render "follow_button", user: @user %>
				<% end %>
				<div id="profile-info">
					<%= pluralize(@user.followers.count, "Follower") %> <br>
				</div>
				<br>
			</div>
			<% if current_user and !@profile %>
				<div id="profile-info">
					<%= pluralize(@user.known_followers(current_user).length, "Follower") %> You Know
				</div>
			<% end %>
		</div>
		<div id="profile-buttons">
			<%= link_to user_path(@user, page: "schedule") do %>
				<div class="<%= "curr" if @tab == "schedule" %>">Schedule</div>
			<% end %>
			<%= link_to user_path(@user, page: "followers") do %>
				<div class="<%= "curr" if @tab == "followers" %>">Followers</div>
			<% end %>
			<%= link_to user_path(@user, page: "following") do %>
				<div class="<%= "curr" if @tab == "following" %>">Following</div>
			<% end %>
			<%= link_to user_path(@user, page: "activity") do %>
				<div class="<%= "curr" if @tab == "activity" %>">Activity</div>
			<% end %>
		</div>
	</div>
</div>
<div class="page-container">
	<br>
	<div style="text-align: left">
		Joined Carpe: <%= relative_time_ago(@user.created_at, true) %> <br>
	</div>
	<% if @tab == "mutual" %>
		<%= render "mutual_friends_listing" %>
	<% elsif @tab == "activity" %>
		<%= render "activity" %>
	<% elsif @tab == "schedule" or !@tab %>
		<%= render "schedule" %>
	<% elsif @tab == "followers" %>
		<%= render "follower_listing" %>
	<% elsif @tab == "following" %>
		<%= render "following_listing" %>
	<% end %>
</div>
