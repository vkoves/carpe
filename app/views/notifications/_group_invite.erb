<% group = notification.entity %>

<div class="notif group-invite">
  <%= link_avatar group, size: 90 %>
  <span class="message"><%= group.name %></span>

  <%= link_to "", update_notification_path(notification, "accepted"), method: :post, remote: true, class: "confirm" %>
  <%= link_to "", update_notification_path(notification, "denied"), method: :post, remote: true, class: "deny" %>
</div>