<!-- The login page -->
<%= stylesheet_link_tag "login" %>
<div id="left">
	<h1>Welcome back!</h1>
	<h5>Enter your email address and password,<br> and we'll unlock the door for you.</h5>
</div>
<div id="right">
	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	  <div class="field text-field">
	    <%= f.label :email %><br />
	    <%= f.email_field :email, class: "text-input", autofocus: true %>
	  </div>
	
	  <div class="field text-field">
	    <%= f.label :password %><br />
	    <%= f.password_field :password, class: "text-input", autocomplete: "off" %>
	  </div>
	
	  <% if devise_mapping.rememberable? -%>
	    <div class="field">
	      <%= f.check_box :remember_me, style: "float: left" %>
	      <%= f.label :remember_me %>
	    </div><br>
	  <% end -%>
	
	  <div class="actions">
	    <%= f.submit "Sign In", :class => "default" %>
	  </div>
	  <br>
	<% end %>
<%= render "devise/shared/links" %>
</div>