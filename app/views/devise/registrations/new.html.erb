<!-- The Sign Up Page -->
<%= stylesheet_link_tag "login" %>

<div id="left">
  <h1>Welcome to Carpe</h1>
  <h5>Enter your name, email and a password <br> and you can get started using Carpe.</h5>
</div>
<div id="right">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field text-field">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "text-input",  autofocus: true %>
    </div>

    <div class="field text-field">
      <%= f.label :email %><br>
      <%= f.email_field :email, class: "text-input", autofocus: true %>
    </div>

    <div class="field text-field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em style="font-size: 11px; margin-left: 5px;">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br>
      <%= f.password_field :password, class: "text-input",  autocomplete: "off" %>
    </div>

    <div class="field text-field">
      <%= f.label :password_confirmation %><br>
      <%= f.password_field :password_confirmation, class: "text-input",  autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", :class => "default" %>
    </div>
    <br>
  <% end %>

  <%= render "devise/shared/links" %>
</div>