<div class="small-activity-card">
  <% if act.is_a?(User) %>
    <% currusergroup = UsersGroup.find_by(user_id:act.id,group_id: @group); curruser = act.id %>
    <%= link_avatar act %>
    <div class="user-information">
      <div class="user-name"><%= act.name %></div>
      <div class="act-name">Joined</div>
      <div class="time-ago"> <%= relative_time_tag(currusergroup.created_at) %> </div>
    </div>
  <% elsif act.is_a?(Category) %>
    <% curruser = User.find(act.user_id) %>
    <%= link_avatar curruser %>
    <div class="user-information">
      <div class="user-name"><%= curruser.name %></div>
      <div class="act-name"> Created category <%= act.name %> </div>
      <div class="time-ago"> <%= relative_time_tag(act.created_at) %> </div>
    </div>
  <% elsif act.is_a?(Event) %>
    <% curruser = User.find(act.user_id) %>
    <%= link_avatar curruser %>
    <div class="user-information">
      <div class="user-name"><%= curruser.name %></div>
      <div class="act-name"> Created event <%= act.name %></div>
      <div class="time-ago"> <%= relative_time_tag(act.created_at) %> </div>
    </div>
  <% end %>
</div>