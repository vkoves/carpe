<%= stylesheet_link_tag "profile" %>

<div id="profile-header">

	<% if @group.banner_image_url and !@group.banner_image_url.empty? %>
		<div id="header-image-blur" style="background-image:url(<%= @group.banner_image_url %>);"></div>
	<% else %>
		<div id="header-image"></div>
	<% end %>

	<div class="page-container">
		<div class="profile-avatar avatar">
			<img src=<%= @group.avatar_url %>>
		</div>
		<div id="profile-text">
			<h1 id="profile-name"><%= @group.name %>
			<%= link_to_block "Edit", "/group/" + params[:id] + "/edit", class: "default" %>
			<%= link_to_block "Manage Users", "/groups/add-users/" + params[:id], class: "default" %>
			</h1>
			<%= link_to_block "All Groups", "/groups", class: "default" %>
		</div>
	</div>
</div>

<!--
<h3 class="zero-top">
	Role: <%= @role %>
</h3>
-->

<% #render the group's schedule with the schedule partial %>
<%= render "shared/schedule"%>