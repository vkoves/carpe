<%= stylesheet_link_tag "activity" %>

<div id="body">
  <main class="content">
    <span class="carpe-color current-header">Current Events</span>
      <% @upcoming_events.each do |event| %>
        <%= render "shared/event_tile", event:event %>
      <% end %>
  </main>

  <aside id="group-overview-info" class="vertical flex-list sidebar with-horizontal-borders">
    <div>
      <h2>About</h2>
      <p><%= @group.description %></p>
    </div>

    <div>
      <div id="side-member-pane">
        <h2>Members <%= link_to "View More", group_path(@group, view: :members), id:"view-all-link" %></h2>
        <% @group.users_groups[0 .. 4].each do |user| %>
          <%= link_avatar user.user %>
        <% end %>
      </div>
    </div>

    <div>
      <h2>Recent Actions</h2>
      <% @activity.each do |act| %>
        <%= render "small_activity_card", act:act %>
      <% end %>
      <div id="recent-actions-container" class="vertical flex-list"></div>
    </div>
  </aside>
</div>