<h2 class="no-bold">Manage Members</h2>

<div id="manage-members-container">
  <div>
    <header class="member-stats">
      <h3>Members</h3>
      <h4><%= @group.size %></h4>

      <h3>Editors</h3>
      <h4><%= @group.members_with_role(:editor).size %></h4>

      <h3>Moderators</h3>
      <h4><%= @group.members_with_role(:moderator).size %></h4>

      <h3>Owners</h3>
      <h4><%= @group.members_with_role(:owner).size %></h4>

      <div class="buttons">
        <%= content_tag(:span, "Invite Members", id: "invite-members", class: "wide button") if can?(:invite_members, @group) %>
        <%= text_field_tag "member-search", nil, placeholder: "Search", autocomplete: "off" %>
      </div>
    </header>
  </div>

  <div id="manage-member-list">
    <%= render partial: "groups/manage_user_card", collection: @members, as: :membership %>
  </div>
</div>