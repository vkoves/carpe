<% content_for :title do %> - Admin<% end %>
<h2 class="no-bold">Admin Panel</h2>
<h4>Info</h4>
<a href="/users" class="default"><span>View Users</span></a><br><br>

<h4>Admins</h4>
<% @users = User.where(admin: true) %>
<% @users.each do |user| %>
<div style="width: 200px; margin-left: auto; margin-right: auto;     width: 200px;
    margin-left: auto;
    margin-right: auto;
    height: 56px;
    background: gainsboro;
    padding: 5px 10px;
    border-radius: 5px; margin-bottom: 10px;">
	<a href="/u/<%= user.id %>">
		<div class="avatar" style="float: left">
			<img style="width: 50px;" src="<%= user.user_avatar(100) %>">
		</div>
	</a>
	<div style="position: relative; top: 15px; margin-left: 60px; font-weight: 600;"><%= user.name %></div>
</div>
<% end %>
