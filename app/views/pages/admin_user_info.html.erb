<% content_for :title do %> User <%=@user.id%> Admin Overview <% end %>
<%= stylesheet_link_tag "pages/admin" %>

<div class="page-container">
  <h2 class="no-bold">Viewing Information on <%= @user.name%></h2>

  <br>
  <div class="avatar">
    <%= link_to(@user) do %>
        <img src="<%= @user.user_avatar(100) %>">
    <% end %>
  </div>
  <br>

  <h2>General</h2>
  <ul class="pretty-list">
    <li><b>User id:</b> <%=@user.id%></li>
    <li><b>Email:</b> <%=@user.email%></li>
    <li><b>Account type:</b> <%=@user.admin ? 'admin' : 'user'%></li>
    <li><b>Profile type:</b> <%=@user.public_profile ? 'public' : 'private'%></li>
    <li><b>Timezone:</b> <%=@user.home_time_zone%></li>
    <li><b>Custom url:</b> <%=@user.custom_url.blank? ? 'not using one' : @user.custom_url %></li>
    <li><b>Account created on:</b> <%=Time.at(@user.created_at).strftime('%Y-%m-%d at %H:%M')%></li>
    <li><b>Times signed in:</b> <%=@user.sign_in_count%></li>
    <li><b>Previous sign in:</b>
      <%=Time.at(@user.last_sign_in_at).strftime('%Y-%m-%d at %H:%M')%>
      from
      <%= @user.last_sign_in_ip %>
    </li>
    <li><b>Most recent sign in:</b>
      <%=Time.at(@user.current_sign_in_at).strftime('%Y-%m-%d at %H:%M')%>
      from
      <%=@user.current_sign_in_ip%>
    </li>
    <li><b>(All) Following:</b> <%=Relationship.where(follower_id: @user.id).count%></li>
    <li><b>(All) Follwed by:</b> <%=Relationship.where(followed_id: @user.id).count%></li>
    <li><b>Categories created:</b> <%=Category.where(user_id: @user.id).count%></li>
    <li><b>Events created:</b> <%=Event.where(user_id: @user.id).count%></li>
    <li><b>Breaks created:</b> <%=RepeatException.where(user_id: @user.id).count%></li>
    <li><b>Last user object update:</b> <%=Time.at(@user.updated_at).strftime('%Y-%m-%d at %H:%M')%></li>
  </ul>

  <br>
  <h2>Groups</h2>
  <% if @groups.empty? %>
      <p>This user is not a part of any groups yet!</p>
  <% else %>
      <ul class="pretty-list">
        <% @groups.each do |group| %>
            <li><b><%= group.role %></b> of <%= link_to( group.name, group_path(group.group_id)) %></li>
        <% end %>
      </ul>
<% end %>
  <br>
</div>