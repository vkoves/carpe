
<% if @home %>
<div class="user-listing <%= @profile ? "profile" : "" %>" style="margin:5px">
<% else %>
<div class="user-listing <%= @profile ? "profile" : "" %>">
<% end %>
	<%= link_to(user) do %>
		<div class="avatar">
			<% if @home %>
				<img src="<%= user.user_avatar(60) %>" style="width:60px;height:60px;">
			<% else %>
				<img src="<%= user.user_avatar(100) %>">
			<% end %>
		</div>
	<% end %>

	<div class="user-details">

		<span class="user-name"><%= user.name %></span><br>
		<% if @profile%>
			<!--
			<%= link_to friendships_path(:id => friendship.id), :method => :delete, :remote => true, :class => "default red friend-remove", "fid" => friendship.id,
				:style => "position: relative; top: 5px;" do %>
				<span>Remove</span>
			<% end %>
			-->
			<!-- <%= user.friends_count %> Connections <br> -->
			Following since: <%= friendship.created_at.strftime("%b. %d, %Y")%> <br>

			<%= link_to relationship_path(friendship), :method => :delete, :remote => true, :class => "default red friend-remove", "fid" => friendship.id do %>
				<% if current_user == friendship.follower # if the current user is following this person, let them unfollow %>
					<span>Unfollow</span>
				<% else %>
					<span>Remove</span>
				<% end %>
			<% end %>
		<% elsif current_user and current_user != user %>
			<% if !@home %>
				<% mut = current_user.mutual_friends(user).count %>
				<span id="mutual-friends"><%= mut %> mutual friends</span>
				<br>
				<%= render "/users/follow_button", user: user %>
			<% else %>
				<% if user.is_busy? %>
					<div class="red circle"></div>
					<% if user.current_events[0].has_access?(current_user) %>
						<a class="simple" href="/u/<%= user.id %>?p=schedule"><%= raw user.current_events[0].get_html_name %></a>
					<% else %>
						Busy
					<% end %>
					until <%= relative_time_ago(user.current_events[0].end_date, false) %>

				<% else %>
					<div class="green circle"></div>
					<% if user.next_event %>
						Free until <%= relative_time_ago(user.next_event.date, false) %>
					<% else %>
						Free the rest of the day
					<% end %>
				<% end %>
			<% end %>
		<% end %>
	</div>
</div>